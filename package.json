{
  "name": "wave-roll-studio",
  "displayName": "WaveRoll Studio - MIDI Player & Viewer",
  "description": "VS Code Extension for multi-file MIDI piano-roll visualization and playback (powered by wave-roll)",
  "publisher": "crescent-stdio",
  "version": "0.4.0",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/crescent-stdio/wave-roll-studio"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "main": "./dist/extension/extension.js",
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "wave-roll-studio.preview",
        "displayName": "WaveRoll Studio",
        "selector": [
          {
            "filenamePattern": "*.mid"
          },
          {
            "filenamePattern": "*.midi"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.6"
  },
  "dependencies": {
    "@tonejs/midi": "^2.0.28",
    "tone": "^15.1.22",
    "wave-roll": "file:../wave-roll"
  }
}
