{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "label": "pnpm: build"
    },
    {
      "type": "shell",
      "command": "pnpm watch",
      "group": "build",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "label": "pnpm: watch"
    }
  ]
}
